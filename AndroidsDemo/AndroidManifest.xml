<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidsdemo">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidsdemo.ShapeImageViewDemo"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.example.androidsdemo.MaskImageViewDemo"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.example.androidsdemo.RatioImageViewDemo"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.example.androidsdemo.ScrollPickerViewDemo"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.example.androidsdemo.AnimatorUtilDemo"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".KeyboardLayoutDemo"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".DragListViewDemo"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".EasyAdapterDemo" />
        <activity android:name=".TouchGestureDetectorDemo" />
        <activity
            android:name=".EllipsizeUtilsDemo"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>